<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_height="185dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toTopOf="parent"
            app:cardBackgroundColor="#333333" app:cardElevation="5dp" app:contentPadding="2dp"
            app:cardCornerRadius="5dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:visibility="visible"
                android:textAlignment="center" android:paddingLeft="3dp" android:paddingRight="3dp">

            <TextView
                    tools:text="Title"

                    android:layout_width="wrap_content"
                    android:layout_height="20dp" android:id="@+id/album_card_title"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/album_card_art"
                    android:textColor="#CCCCCC" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintBottom_toTopOf="@+id/album_card_artist" android:textAlignment="center"
                    android:maxLines="2" android:maxWidth="154dp"/>
            <TextView
                    tools:text="Artist"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" android:id="@+id/album_card_artist"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/album_card_title"
                    android:textColor="#CCCCCC" app:layout_constraintHorizontal_bias="0.5"
                    android:textAlignment="center"
                    android:textSize="11sp" android:maxLines="1"/>
            <ImageView
                    android:layout_width="130dp"
                    android:layout_height="130dp" app:srcCompat="@mipmap/ic_launcher_round"
                    android:id="@+id/album_card_art"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>