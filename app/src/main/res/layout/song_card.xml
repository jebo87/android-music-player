<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"

             android:layout_width="190dp"
             android:layout_height="84dp"
             android:layout_marginBottom="7dp"
             android:padding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            android:background="#333333"
            android:padding="3dp">

        <TextView
                tools:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/song_card_artist"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toBottomOf="@+id/song_card_title"
                android:textColor="#CCCCCC" android:textSize="12sp" android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/song_card_duration" android:layout_marginTop="5dp"
        />
        <TextView
                tools:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/song_card_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.100000024" android:textColor="#CCCCCC"
                android:textAlignment="center"
                app:layout_constraintBottom_toTopOf="@+id/song_card_artist"/>
        <TextView
                tools:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/song_card_duration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/song_card_artist" android:textColor="#CCCCCC"
                android:textSize="10sp"
                android:textAlignment="center" app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_more_vert_24px"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_gravity="bottom|end"
            android:layout_marginEnd="5dp" android:layout_marginBottom="5dp"/>
</FrameLayout>
