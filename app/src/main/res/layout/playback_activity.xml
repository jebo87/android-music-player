<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/playback_constraint_layout"
        android:background="@drawable/black_gradient">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_random_icon"
            android:id="@+id/playback_imageview_random"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/playback_album" android:contentDescription="TODO"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/playback_playtime"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_repeat_icon"
            android:id="@+id/playback_imageview_repeat"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/playback_album"
            app:layout_constraintStart_toEndOf="@+id/playback_playtime" android:layout_marginStart="8dp"
            android:visibility="visible"/>
    <TextView
            android:text="TESt"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/playback_title"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/playback_artist" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0" android:textSize="36sp"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp" style="@style/AudioFileInfoOverlayText"
            android:autoText="false" android:textAlignment="center" android:maxLines="2"/>
    <TextView
            android:text="Bob Marley and the wailers"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/playback_artist"
            app:layout_constraintBottom_toTopOf="@+id/playback_album"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp"
            android:layout_marginBottom="8dp" app:layout_constraintTop_toBottomOf="@+id/playback_title"
            app:layout_constraintHorizontal_bias="0.5" style="@style/AudioFileInfoOverlayText"
            android:textAlignment="center" android:maxLines="1"/>
    <TextView
            android:text="Hits of 1998"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/playback_album"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/playback_artist"
            app:layout_constraintBottom_toTopOf="@+id/playback_playtime" style="@style/AudioFileInfoOverlayText"
            android:textAlignment="center" android:maxLines="1"/>
    <TextView
            android:text="3:34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/playback_playtime"
            app:layout_constraintTop_toBottomOf="@+id/playback_album" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            style="@style/AudioFileInfoOverlayText" android:textAlignment="center"/>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/frameLayout"
            app:layout_constraintTop_toBottomOf="@+id/playback_playtime"
            app:layout_constraintVertical_bias="0.050000012">

        <com.github.rongi.rotate_layout.layout.RotateLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:angle="90" android:layout_gravity="center"
                android:id="@+id/playback_rotate_layout"
                style="@style/AudioFileInfoOverlayText">    <!-- Specify rotate angle here -->

            <ca.makakolabs.makakomusic.ui.customviews.CircularSlider
                    android:layout_height="wrap_content"
                    android:scaleType="matrix"
                    android:id="@+id/playback_imageview_bg_slider" android:layout_gravity="center"
                    android:background="@drawable/ic_albumart_bg" android:layout_width="wrap_content"/>
        </com.github.rongi.rotate_layout.layout.RotateLayout>

        <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp" app:srcCompat="@drawable/ic_empty_album"
                android:id="@+id/playback_imageview_album" android:layout_gravity="center"/>

    </FrameLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="52dp" app:srcCompat="@drawable/ic_back_button"
            android:id="@+id/playback_back_button" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_next"
            android:id="@+id/playbback_next_button" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_pause_button"
            android:id="@+id/playback_pause_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            app:layout_constraintEnd_toStartOf="@+id/playbback_next_button" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/playback_back_button" android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
